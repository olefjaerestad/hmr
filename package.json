  },
  "dependencies": {
    "@types/ws": "^7.4.0",
    "ws": "^7.4.2"
  },
  "description": "Hot Module Reloading server and client side scripts.",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.19",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "typescript": "^4.1.3"
  },
  "homepage": "https://github.com/olefjaerestad/hmr#readme",
  "keywords": [
    "hmr",
    "websockets"
  ],
  "license": "MIT",
  "main": "build/exports/server.js",
  "name": "hmr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olefjaerestad/hmr.git"
  },
  "scripts": {
    "dev": "rm -rf dist && tsc && concurrently \"tsc -w\" \"npm run hmr:serve\" \"npm run dev:serve\"",
    "dev:serve": "nodemon --config nodemon.devserver.json --es-module-specifier-resolution=node scripts/dev-server.js",
    "hmr:serve": "nodemon --config nodemon.hmrserver.json --es-module-specifier-resolution=node scripts/hmr-server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "version": "0.0.1"
}
